/*文章展示*/
.post-body{
	border-radius: 10px;
	padding: 0px 10px 0px 10px;
}
.content .post-block{
	background: rgb(245,245,245);
	border: #ccc dashed 1px;
	border-radius: 5px;
	padding: 0.5%;
}
@media screen and (max-width:770px) {
    div#valine-comments{
         width: 90%;
         position: relative;
         left: 5%;
    }
}
/*设置评论窗体大小*/
div.vwrap{
    background: rgb(245,245,245);
}
div#valine-comments{
    margin: 30px 0px 0px 0px;
}

/*gitalk发言框*/
.gt-header-textarea:hover{
    background: rgb(245,245,245);
}
/*代码块复制按钮*/
.highlight{
  /*方便copy代码按钮（btn-copy）的定位*/
  position: relative;
}
.btn-copy {
    display: inline-block;
    cursor: pointer;
    background-color: rgb(245,245,245);
    background-image: linear-gradient(#fcfcfc,#eee);
    border: 1px solid #d5d5d5;
    border-radius: 3px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-appearance: none;
    font-size: 13px;
    font-weight: 700;
    line-height: 20px;
    color: #333;
    -webkit-transition: opacity .3s ease-in-out;
    -o-transition: opacity .3s ease-in-out;
    transition: opacity .3s ease-in-out;
    padding: 2px 6px;
    position: absolute;
    right: 5px;
    top: 5px;
    opacity: 0;
}
.btn-copy span {
    margin-left: 5px;
}
.highlight:hover .btn-copy{
  opacity: 1;
}
/*修改文章内链接样式*/
.post-body a:not(.btn){
    border-bottom: none;
    color: #0593d3;
}
.post-body a:not(.btn):hover{
    color: #0477ab
}