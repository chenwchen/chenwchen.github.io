/*文章展示*/
.post-body{
	border-radius: 10px;
	padding: 0px 10px 0px 10px;
}
.content .post-block {
    border: #f0f0f0 dashed 1px;
    border-radius: 5px;
    padding: 0.5%;
}
@media screen and (min-width: 771px) {
     /*修改代码框的样式*/
    .highlight .gutter pre, .highlight .code pre, .highlight, pre {
         background: #f9f9f9;
         opacity: 0.7;
         color: #000;
         font-weight: 100;
    }
}
@media screen and (max-width: 770px) {
    .content .post-block {
	    background: rgba(240, 240, 240, 0.3);
    }
    div#valine-comments{
         width: 90%;
         position: relative;
         left: 5%;
    }
    .highlight .gutter pre, .highlight .code pre, .highlight, pre {
         background: #ddd;
         opacity: 0.5;
         color: #000;
         font-weight: 100;
    }
}


/*设置评论窗体大小*/
div.vwrap{
    background: rgb(245,245,245);
}
div#valine-comments{
    margin: 30px 0px 0px 0px;
}

/*gitalk发言框*/
.gt-header-textarea:hover{
    background: rgb(245,245,245);
}
/*代码块复制按钮*/
.highlight{
  /*方便copy代码按钮（btn-copy）的定位*/
  position: relative;
}
.btn-copy {
    display: inline-block;
    cursor: pointer;
    background-color: #f9f9f9;
    border: 0px;
    border-radius: 3px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-appearance: none;
    font-size: 14px;
    font-weight: 300;
    line-height: 20px;
    color: #000;
    -webkit-transition: opacity .3s ease-in-out;
    -o-transition: opacity .3s ease-in-out;
    transition: opacity .3s ease-in-out;
    padding: 2px 6px;
    position: absolute;
    right: 5px;
    top: 5px;
    opacity: 0;
}
.btn-copy span {
    margin-left: 5px;
}
.highlight:hover .btn-copy{
  opacity: 0.8;
}
